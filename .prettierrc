{
  "semi": false,
  "tabWidth": 4,
  "singleQuote": true,
  "trailingComma": "es5",
  "endOfLine": "auto",
  "printWidth": 80,
  "overrides": [
    {
      "files": [
        "*.json",
        "*.html",
        "*.css",
        "*.less",
        "*.scss",
        "*.config.*",
        "*.eslintrc.*"
      ],
      "options": {
        "tabWidth": 2,
        "singleQuote": false,
        "semi": true
      }
    },
    {
      "files": [
        "*.vue"
      ],
      "options": {
        "tabWidth": 2,
        "singleQuote": true
      }
    },
    {
      "files": [
        "*.jsx",
        "*.tsx"
      ],
      "options": {
        "tabWidth": 2
      }
    }
  ]
}
